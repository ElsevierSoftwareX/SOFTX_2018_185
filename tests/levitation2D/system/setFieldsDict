FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.melt 0
);

regions
(
    sphereToCell
    {
        centre (0.0 0.005 0.0);
        radius 0.0128;
        fieldValues
        (
            volScalarFieldValue alpha.melt 1
        );
    }
);


