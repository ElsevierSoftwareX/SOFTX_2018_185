FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      sigma;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1e6;

boundaryField
{
    Cyl_top
    {
        type            fixedValue;
        value           uniform 1e6;
    }
    Cyl_mdl
    {
        type            fixedValue;
        value           uniform 1e6;
    }
    Cyl_btm
    {
        type            fixedValue;
        value           uniform 1e6;
    }
}


